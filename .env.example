# Server configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production
LOG_LEVEL=info

# Polling interval in milliseconds
POLLING_INTERVAL_MS=10000

# GitHub configuration
GITHUB_REPO=owner/repo
GITHUB_TOKEN=your_github_token
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# YouTrack configuration
YOUTRACK_BASE_URL=https://your-youtrack-instance.myjetbrains.com/youtrack
YOUTRACK_TOKEN=your_youtrack_token
YOUTRACK_PROJECT_ID=PROJECT_ID

# SQLite database file path (should match Docker volume mount)
DB_FILE_PATH=/app/data/database.sqlite

# User mappings (optional, comma-separated: github:youtrack)
USER_MAPPINGS=github1:youtrack1,github2:youtrack2
